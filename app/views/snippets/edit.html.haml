:erb
  <h1>Editing snippet</h1>

  <% form_for(@snippet) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :code %><br />
      <%= f.text_area :code %>
    </p>
    <p>
      <%= f.label :language %><br />
      <%= f.text_field :language %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>

  <%= link_to 'Show', @snippet %> |
  <%= link_to 'Back', snippets_path %>