!!!
%html{"xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en", "lang"=>"en"}
  %head
    %meta{"http-equiv"=>"content-type", "content"=>"text/html;charset=UTF-8"}
    %title #{controller.controller_name}: #{controller.action_name}
    = stylesheet_link_tag 'blueprint/screen.css'
    = stylesheet_link_tag 'application'
    =# stylesheet_link_tag 'scaffold'
    =# stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = stylesheet_link_tag 'themes/slush_poppies'
  %body
    %table{:width=>"100%"}
      %tr
        %td{:width=>"30px"}
          %pre.slush_poppies
            %span.line-numbers>~ @snippet.formatted_line_numbering
        %td
          ~ @snippet.formatted_code
